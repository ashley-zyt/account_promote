<footer class="bg-gray-800 text-white py-8">
  <div class="container mx-auto px-5">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div>
        <h3 class="text-xl font-bold mb-4">AccountPromote</h3>
        <p class="text-gray-400">Helping businesses grow through smart account promotion strategies.</p>
      </div>
      
      <div>
        <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          <li><%= link_to "Home", root_path, class: "text-gray-400 hover:text-white" %></li>
          <li><%= link_to "About Us", "#", class: "text-gray-400 hover:text-white" %></li>
          <li><%= link_to "Services", "#", class: "text-gray-400 hover:text-white" %></li>
          <li><%= link_to "Contact", "#", class: "text-gray-400 hover:text-white" %></li>
        </ul>
      </div>
      
      <div>
        <h4 class="text-lg font-semibold mb-4">Legal</h4>
        <ul class="space-y-2">
          <li><%= link_to "Privacy Policy", "#", class: "text-gray-400 hover:text-white" %></li>
          <li><%= link_to "Terms of Service", "#", class: "text-gray-400 hover:text-white" %></li>
          <li><%= link_to "Cookie Policy", "#", class: "text-gray-400 hover:text-white" %></li>
        </ul>
      </div>
      
      <div>
        <h4 class="text-lg font-semibold mb-4">Connect</h4>
        <div class="flex space-x-4">
          <%= link_to "#", class: "text-gray-400 hover:text-white" do %>
            <i class="fab fa-twitter text-xl"></i>
          <% end %>
          <%= link_to "#", class: "text-gray-400 hover:text-white" do %>
            <i class="fab fa-facebook text-xl"></i>
          <% end %>
          <%= link_to "#", class: "text-gray-400 hover:text-white" do %>
            <i class="fab fa-linkedin text-xl"></i>
          <% end %>
          <%= link_to "#", class: "text-gray-400 hover:text-white" do %>
            <i class="fab fa-instagram text-xl"></i>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="border-t border-gray-700 mt-8 pt-6 text-center text-gray-400">
      <p>&copy; <%= Time.current.year %> AccountPromote. All rights reserved.</p>
    </div>
  </div>
</footer>